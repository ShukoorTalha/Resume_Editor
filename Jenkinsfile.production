// Jenkins CI/CD Pipeline for Resume Builder - Production Ready
// Features: Testing, Security Scanning, Multi-Stage Deployment, Monitoring
// Compatible with Docker and Snap-installed Docker

pipeline {
    agent any
    
    parameters {
        choice(name: 'DEPLOY_ENV', choices: ['dev', 'staging', 'production'], description: 'Deployment Environment')
    }
    
    environment {
        DOCKER_IMAGE = 'resume-builder'
        DOCKER_TAG = "${env.BUILD_NUMBER}-${env.GIT_COMMIT.take(7)}"
        CONTAINER_NAME = "resume-builder-${DEPLOY_ENV}"
        APP_PORT = "${DEPLOY_ENV == 'production' ? '8081' : DEPLOY_ENV == 'staging' ? '8082' : '8083'}"
        NODE_ENV = "${DEPLOY_ENV == 'production' ? 'production' : 'staging'}"
        DOCKER_REGISTRY = '' // Add registry: 'docker.io/username' or 'your-ecr-uri'
        SLACK_WEBHOOK = credentials('slack-webhook-url') // Configure in Jenkins
        SONAR_HOST_URL = credentials('sonarqube-url') // SonarQube URL
    }
    
    options {
        timeout(time: 1, unit: 'HOURS')
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '30', artifactNumToKeepStr: '10'))
    }
    
    stages {
        stage('üîç Checkout') {
            steps {
                echo "üì• Checking out code from ${env.GIT_BRANCH}..."
                checkout scm
                script {
                    env.GIT_COMMIT_MSG = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()
                    env.GIT_AUTHOR = sh(script: "git log -1 --pretty=%an", returnStdout: true).trim()
                }
            }
        }
        
        stage('üì¶ Install Dependencies') {
            steps {
                echo 'üìö Installing Node.js dependencies...'
                sh 'npm ci'
            }
        }
        
        stage('üî¨ Code Quality Checks') {
            parallel {
                stage('Type Checking') {
                    steps {
                        echo '‚úÖ Running TypeScript type checks...'
                        sh 'npm run type-check'
                    }
                }
                
                stage('Linting') {
                    steps {
                        echo 'üîß Running ESLint...'
                        sh 'npm run lint || true'
                    }
                }
                
                stage('Security Audit') {
                    steps {
                        echo 'üõ°Ô∏è Running npm audit...'
                        sh '''
                            npm audit --audit-level=moderate || {
                                if [ $? -eq 1 ]; then
                                    echo "‚ö†Ô∏è Moderate vulnerabilities found - reviewing..."
                                    npm audit --json > npm-audit-report.json
                                fi
                            }
                        '''
                    }
                }
            }
        }
        
        stage('üß™ Run Tests') {
            steps {
                echo 'üß™ Running test suite...'
                sh 'npm run test -- --reporter=verbose --reporter=json --outputFile=test-results.json 2>&1 || true'
                
                // Archive test results
                script {
                    junit testResults: 'test-results.json', allowEmptyResults: true, skipPublishingChecks: true
                }
            }
        }
        
        stage('üìä Code Coverage') {
            steps {
                echo 'üìà Generating code coverage report...'
                sh 'npm run test:coverage || true'
                
                // Publish coverage
                publishHTML([
                    reportDir: 'coverage',
                    reportFiles: 'index.html',
                    reportName: 'Code Coverage Report'
                ])
            }
        }
        
        stage('üîê SAST Security Scanning') {
            when {
                expression { DEPLOY_ENV != 'dev' }
            }
            steps {
                echo 'üîí Running static application security testing...'
                script {
                    try {
                        // Using Semgrep for SAST (lightweight alternative to SonarQube)
                        sh '''
                            # Install semgrep if not available
                            which semgrep || pip install semgrep
                            
                            # Run security scan
                            semgrep --config=p/security-audit --json > semgrep-results.json || true
                        '''
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è SAST scanning skipped: ${e.message}"
                    }
                }
            }
        }
        
        stage('üèóÔ∏è Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image for ' + DEPLOY_ENV + '...'
                script {
                    def baseTag = DOCKER_REGISTRY ? "${DOCKER_REGISTRY}/${DOCKER_IMAGE}" : DOCKER_IMAGE
                    
                    sh """
                        docker build \
                            -t ${baseTag}:${DOCKER_TAG} \
                            -t ${baseTag}:${DEPLOY_ENV}-latest \
                            -t ${baseTag}:latest \
                            --build-arg NODE_ENV=${NODE_ENV} \
                            --label "git-commit=${env.GIT_COMMIT}" \
                            --label "build-number=${env.BUILD_NUMBER}" \
                            --label "environment=${DEPLOY_ENV}" \
                            --label "built-date=\$(date -u +'%Y-%m-%dT%H:%M:%SZ')" \
                            .
                    """
                }
            }
        }
        
        stage('üîç Docker Image Scan') {
            when {
                expression { DEPLOY_ENV != 'dev' }
            }
            steps {
                echo 'üîé Scanning Docker image for vulnerabilities...'
                script {
                    try {
                        // Using Trivy for container scanning
                        sh '''
                            which trivy || {
                                echo "Installing Trivy..."
                                curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /usr/local/bin
                            }
                            
                            trivy image --exit-code 0 --severity HIGH,CRITICAL \
                                --format json --output trivy-report.json \
                                ${DOCKER_IMAGE}:${DOCKER_TAG}
                        '''
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è Docker image scanning skipped: ${e.message}"
                    }
                }
            }
        }
        
        stage('üöÄ Deploy to ' + DEPLOY_ENV) {
            steps {
                echo 'üåê Deploying to ' + DEPLOY_ENV + ' environment...'
                script {
                    def imageTag = DOCKER_REGISTRY ? "${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}" : "${DOCKER_IMAGE}:${DOCKER_TAG}"
                    
                    // Stop old container
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                    """
                    
                    // Deploy new container
                    sh """
                        docker run -d \
                            --name ${CONTAINER_NAME} \
                            --restart always \
                            -p ${APP_PORT}:80 \
                            -e NODE_ENV=${NODE_ENV} \
                            -e DEPLOY_ENV=${DEPLOY_ENV} \
                            -l environment=${DEPLOY_ENV} \
                            -l service=resume-builder \
                            --health-cmd='wget --no-verbose --tries=1 --spider http://localhost:80 || exit 1' \
                            --health-interval=30s \
                            --health-timeout=10s \
                            --health-retries=3 \
                            --health-start-period=40s \
                            ${imageTag}
                    """
                }
            }
        }
        
        stage('‚úÖ Health Check & Smoke Tests') {
            steps {
                echo 'üè• Running health checks and smoke tests...'
                script {
                    sh '''
                        timeout 120 bash -c 'until curl -f http://localhost:${APP_PORT}/ > /dev/null 2>&1; do sleep 3; done'
                        echo "‚úÖ Health check passed"
                        
                        # Run basic smoke tests
                        echo "üö¨ Running smoke tests..."
                        curl -s http://localhost:${APP_PORT}/ | grep -q "Resume" && echo "‚úÖ Page loads successfully" || exit 1
                    '''
                }
            }
        }
        
        stage('üì§ Push to Registry') {
            when {
                expression { DOCKER_REGISTRY && DEPLOY_ENV in ['staging', 'production'] }
            }
            steps {
                echo 'üì¶ Pushing image to Docker registry...'
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin ${DOCKER_REGISTRY}
                            docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG}
                            docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DEPLOY_ENV}-latest
                            docker logout ${DOCKER_REGISTRY}
                        '''
                    }
                }
            }
        }
        
        stage('üßπ Cleanup') {
            steps {
                echo 'üóëÔ∏è Cleaning up old Docker resources...'
                sh '''
                    # Remove dangling images
                    docker image prune -f --filter "until=72h" || true
                    
                    # Remove exited containers
                    docker container prune -f || true
                '''
            }
        }
    }
    
    post {
        success {
            echo "‚úÖ Pipeline succeeded for ${DEPLOY_ENV} deployment!"
            script {
                def message = """
                    ‚úÖ Resume Builder - ${DEPLOY_ENV.toUpperCase()} Deployment Successful
                    
                    üìä Build Details:
                    ‚Ä¢ Build #: ${env.BUILD_NUMBER}
                    ‚Ä¢ Commit: ${env.GIT_COMMIT.take(7)}
                    ‚Ä¢ Author: ${env.GIT_AUTHOR}
                    ‚Ä¢ Message: ${env.GIT_COMMIT_MSG}
                    
                    üåê Access URL:
                    ‚Ä¢ http://localhost:${APP_PORT}
                    
                    üìà Metrics:
                    ‚Ä¢ Environment: ${DEPLOY_ENV}
                    ‚Ä¢ Node Env: ${NODE_ENV}
                    ‚Ä¢ Image Tag: ${DOCKER_TAG}
                """.stripIndent()
                
                sendSlackNotification(message, 'good')
            }
        }
        
        failure {
            echo "‚ùå Pipeline failed!"
            script {
                // Capture logs for debugging
                sh "docker logs ${CONTAINER_NAME} > container-logs.txt 2>&1 || true"
                
                // Rollback on production failure
                if (DEPLOY_ENV == 'production') {
                    sh '''
                        echo "‚ö†Ô∏è Rolling back production deployment..."
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                    '''
                }
                
                def errorMessage = """
                    ‚ùå Resume Builder - ${DEPLOY_ENV.toUpperCase()} Deployment FAILED
                    
                    üìä Build Details:
                    ‚Ä¢ Build #: ${env.BUILD_NUMBER}
                    ‚Ä¢ Commit: ${env.GIT_COMMIT.take(7)}
                    ‚Ä¢ Author: ${env.GIT_AUTHOR}
                    
                    üîó Jenkins URL: ${env.BUILD_URL}
                    
                    üìã Check logs for details.
                """.stripIndent()
                
                sendSlackNotification(errorMessage, 'danger')
            }
        }
        
        unstable {
            echo "‚ö†Ô∏è Pipeline is unstable"
            script {
                sendSlackNotification("‚ö†Ô∏è Resume Builder - ${DEPLOY_ENV.toUpperCase()} Deployment is UNSTABLE", 'warning')
            }
        }
        
        always {
            echo 'üìù Archiving reports and cleaning workspace...'
            script {
                // Archive reports
                archiveArtifacts artifacts: '*-report*.json,*-results*.json,container-logs.txt', allowEmptyArchive: true
                
                // Clean workspace
                cleanWs()
            }
            
            // Print summary
            echo """
                ================================================================================
                Pipeline Summary for ${DEPLOY_ENV}:
                ‚Ä¢ Build Status: ${currentBuild.result}
                ‚Ä¢ Build Duration: ${currentBuild.durationString}
                ‚Ä¢ Build URL: ${env.BUILD_URL}
                ================================================================================
            """
        }
    }
}

// Slack notification helper
def sendSlackNotification(String message, String color) {
    try {
        def payload = [
            channel: '#deployments',
            username: 'Jenkins CI/CD',
            icon_emoji: ':jenkins:',
            attachments: [
                [
                    color: color,
                    text: message,
                    footer: "Jenkins Resume Builder Pipeline",
                    ts: System.currentTimeMillis() / 1000
                ]
            ]
        ]
        
        httpRequest(
            httpMode: 'POST',
            url: env.SLACK_WEBHOOK,
            contentType: 'APPLICATION_JSON',
            requestBody: groovy.json.JsonOutput.toJson(payload)
        )
    } catch (Exception e) {
        echo "‚ö†Ô∏è Slack notification failed: ${e.message}"
    }
}
